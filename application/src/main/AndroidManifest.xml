<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.boliu.android.viewtrip" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:largeHeap="true"
        android:label="@string/app_name">

        <activity
            android:name="org.boliu.android.viewtrip.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.TranslucentActionBar.Overlay"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="org.boliu.android.viewtrip.session.SessionDetailActivity"
            android:theme="@style/Theme.viewtrip.SessionDetails">
        </activity>

    </application>

</manifest>
